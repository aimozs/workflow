<p id="notice"><%= notice %></p>

<h1>Listing Exercises</h1> <%= link_to '+', new_exercise_path, class="btn btn-warning" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Video</th>
      <th>Description</th>
      <th>Bodypart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.name %></td>
        <td><%= exercise.image %></td>
        <td><%= exercise.video %></td>
        <td><%= exercise.description %></td>
        <td><%= exercise.BodyPart %></td>
        <td><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
